extends layout

block append vars
	- activeLink = 'Home'

block header
	div.clearfix.pt1
		div.clearfix.pt3
			div.col.sm-col-6.md-pr2
				h1.h0.mt0.mb1 Brendan Strahm
			div.md-mbn2.col.sm-col-6
				h5.mt1.mb1 #[i.fa.fa-envelope.mr1]bstrahm [at] gmail.com<br />
				h5.mt1.mb1 #[i.fa.fa-linkedin-square.mr1]
					a(href='https://www.linkedin.com/in/bstrahm') LinkedIn
				h5.my0 #[i.fa.fa-file-text.mr1]
					a(href=contents['Strahm_B_Resume_S16_General.pdf'].url) Resume (PDF)
		div.mb3.sm-col.sm-col-6.md-pr2
			p.my1!= typogr(contents['about-me.md'].metadata.tagline).typogrify()
			a(href= '/about-me.html') More about me &raquo;

block content
	a(name='projects')
	div.clearfix
		each project in projects
			div.md-col.md-col-6
				div.clearfix.md-mr2.mt2.project(style="background-image: url(#{project.url + project.metadata.image})")
					div.pb2.px3
						h2.mb0
							a(href= project.url)= project.title
						if project.metadata.subtitle
							h3.mt0.h6.caps!= typogr(project.metadata.subtitle).typogrify()
						if project.metadata.tagline
							div.mt1!= typogr(project.metadata.tagline).typogrify()
