doctype html
html(lang='en')
	head
		block head
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
			meta(name='viewport', content='width=device-width')
			title
				block title
					= locals.name
			link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Alegreya+Sans:400,500,500italic,700,700italic,800,900')
			link(rel='stylesheet', href='https://npmcdn.com/basscss@8.0.0/css/basscss.min.css')
			link(rel='stylesheet', href=contents.css['main.css'].url)
	body
		div.site-wrapper
			header.clearfix
				div.col.md-col-6
					h1
						a(href=locals.url) Brendan Strahm
					p UX Researcher
				div.col.md-col-6
					block nav-links
						p.right-align
							//- a(href=locals.url + 'asdf.html') asdf
							span ...links
			div#content
				block content
					h2 I'm empty!
					// Empty state
			footer
					block footer
						section
							!=contents['footer.md'].html
						section
							p &copy; #{ new Date().getFullYear() } #{ locals.owner }
